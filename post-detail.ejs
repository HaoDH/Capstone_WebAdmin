<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Responsive Admin Dashboard Template">
    <meta name="keywords" content="admin,dashboard">
    <meta name="author" content="stacks">
    <!-- The above 6 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Title -->
    <title>Cook & Share - Post Detail</title>

    <!-- Styles -->
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <link href="plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="plugins/icomoon/style.css" rel="stylesheet">
    <link href="plugins/uniform/css/default.css" rel="stylesheet" />
    <link href="plugins/switchery/switchery.min.css" rel="stylesheet" />

    <!-- Theme Styles -->
    <link href="css/space.min.css" rel="stylesheet">
    <link href="css/custom.css" rel="stylesheet">

    <!-- Firestore Setting -->
    <script src="https://www.gstatic.com/firebasejs/5.3.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/5.3.1/firebase-firestore.js"></script>
    <script src="https://www.gstatic.com/firebasejs/5.3.1/firebase.js"></script>
    <script src="plugins/handlebars/handlebars-v4.0.11.js" type="text/javascript"></script>
    <script src="plugins/jquery/jquery-3.1.0.min.js"></script>
    <script src="plugins/datatables/js/jquery.datatables.min.js"></script>

    <script>
        var config = {
            apiKey: "AIzaSyBqMpQYOWyRh5q0cRCqFdfR5KV-5iDbASs",
            authDomain: "capstone-project-1d078.firebaseapp.com",
            databaseURL: "https://capstone-project-1d078.firebaseio.com",
            projectId: "capstone-project-1d078",
            storageBucket: "capstone-project-1d078.appspot.com",
            messagingSenderId: "514107724517"
        };
        firebase.initializeApp(config);
    </script>
    <script src="js/pages/post-detail.js"></script>
</head>

<body>
    <!-- Page Container -->
    <div class="page-container">
        <!-- Page Sidebar -->
        <div class="page-sidebar">
            <a class="logo-box" href="/">
                <span>Cook & Share</span>
                <!-- <i class="icon-radio_button_unchecked" id="fixed-sidebar-toggle-button"></i> -->
                <i class="icon-close" id="sidebar-toggle-button-close"></i>
            </a>
            <div class="page-sidebar-inner">
                <div class="page-sidebar-menu">
                    <ul class="accordion-menu">
                        <li>
                            <a href="/">
                                <i class="menu-icon icon-home4"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a href="youtube">
                                <i class="menu-icon icon-inbox"></i>
                                <span>Youtube</span>
                            </a>
                        </li>
                        <li>
                            <a href="javascript:void(0)">
                                <i class="menu-icon icon-flash_on"></i><span>Report</span><i class="accordion-icon fa fa-angle-left"></i>
                            </a>
                            <ul class="sub-menu">
                                <li><a href="daily-report">Daily</a></li>
                                <li><a href="weekly-report">Weekly</a></li>
                                <li><a href="monthly-report">Monthly</a></li>
                                <li><a href="annual-report">Annual</a></li>
                            </ul>
                        </li>
                        <li class="active-page">
                            <a href="javascript:void(0);">
                                <i class="menu-icon icon-format_list_bulleted"></i>
                                <span>Data</span>
                                <i class="accordion-icon fa fa-angle-left"></i>
                            </a>
                            <ul class="sub-menu">
                                <li><a href="table-user">Users</a></li>
                                <li><a href="table-post" class="active">Posts</a></li>
                                <li><a href="table-report">Reports</a></li>
                            </ul>
                        </li>

                        <li class="menu-divider"></li>
                        <li>
                            <a href="/">
                                <i class="menu-icon icon-help_outline"></i>
                                <span>About</span>
                            </a>
                        </li>
                        <li>
                            <a href="/">
                                <i class="menu-icon icon-public"></i>
                                <span>Changelog</span>
                                <span class="label label-danger">1.0</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Page Sidebar -->

        <!-- Page Content -->
        <div class="page-content">
            <!-- Page Header -->
            <div class="page-header">
                <div class="search-form">
                    <form action="#" method="GET">
                        <div class="input-group">
                            <input type="text" name="search" class="form-control search-input" placeholder="Type something...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" id="close-search" type="button">
                                    <i class="icon-close"></i>
                                </button>
                            </span>
                        </div>
                    </form>
                </div>
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <div class="logo-sm">
                                <a href="javascript:void(0)" id="sidebar-toggle-button">
                                    <i class="fa fa-bars"></i>
                                </a>
                                <a class="logo-box" href="/">
                                    <span>Cook & Share</span>
                                </a>
                            </div>
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
                                aria-expanded="false">
                                <i class="fa fa-angle-down"></i>
                            </button>
                        </div>
                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li>
                                    <a href="javascript:void(0)" id="collapsed-sidebar-toggle-button">
                                        <i class="fa fa-bars"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="javascript:void(0)" id="toggle-fullscreen">
                                        <i class="fa fa-expand"></i>
                                    </a>
                                </li>
                            </ul>
                            <ul class="nav navbar-nav navbar-right">

                                <li class="dropdown user-dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <img src="http://via.placeholder.com/36x36" alt="" class="img-circle">
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="#">Log Out</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <!-- /.navbar-collapse -->
                    </div>
                    <!-- /.container-fluid -->
                </nav>
            </div>
            <!-- /Page Header -->
            <!-- Page Inner -->
            <div class="page-inner no-page-title">
                <div id="main-wrapper">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="panel panel-white">
                                <div class="panel-heading clearfix">
                                    <h4 class="panel-title">Post Detail</h4>
                                </div>
                                <div class="panel-body user-profile-panel" id="post-detail-panel-div">
                                    <script id="load-post-detail" type="text/x-handlebars-template">
                                        <img src="{{{urlImage}}}" class="user-profile-image img-circle" alt="">
                                        <h4 class="text-center m-t-lg">{{title}}</h4>
                                        <p class="text-center">{{postID}}</p>
                                        <hr>
                                        <ul class="list-unstyled text-center">
                                            <li>
                                                <p><i class="fa fa-user m-r-xs"></i>User: {{userName}}</p>
                                            </li>
                                            <li>
                                                <p><i class="fa ffa-id-card-o m-r-xs"></i>{{userID}}</p>
                                            </li>
                                            <li>
                                                <p><i class="fa fa-calendar m-r-xs"></i>{{dateCreate}}</p>
                                            </li>
                                        </ul>
                                        <hr>
                                        <button class="btn btn-block" onclick="deletePost()" style="color: #fff; background-color: crimson; border-color: crimson" id="btn-delete">Delete</button>
                                    </script>

                                </div>
                            </div>
                            <div class="panel panel-white">
                                <div class="panel-heading clearfix">
                                    <h4 class="panel-title">Description</h4>
                                </div>
                                <div class="panel-body" id="more-info-post">
                                    <script id="load-info-post" type="text/x-handlebars-template">
                                        <p>
                                            {{description}}<hr>
                                            Reported:  {{numberOfReported}}
                                            <p></p>
                                            <div id="process"></div>
                                        </p>
                                        </script>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div role="tabpanel">
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs nav-justified" role="tablist">
                                    <li role="presentation" class="active"><a href="#tab21" role="tab" data-toggle="tab">Post
                                            detail
                                        </a></li>
                                    <li role="presentation"><a href="#tab22" role="tab" data-toggle="tab">List report
                                        </a></li>
                                </ul>
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane active fade in" id="tab21">
                                        <div class="panel-body" id="more-info-post">
                                            <div class="col-md-9">
                                                <div class="profile-timeline">
                                                    <ul class="list-unstyled">
                                                        <li class="timeline-item">
                                                            <div class="panel panel-white" id="div-post-content">
                                                                <script id="load-post-contain" type="text/x-handlebars-template">
                                                                <div class="panel-heading clearfix">
                                                                    <h4 class="panel-title">Post</h4>
                                                                </div>
                                                                <div class="panel-body">
                                                                    <div class="timeline-item-header">
                                                                        <img src="{{userImgUrl}}"
                                                                            alt="">
                                                                        <p>{{userName}} <span>posted a status</span></p>
                                                                        <small>3 hours ago</small>
                                                                    </div>
                                                                    <div class="timeline-item-post">
                                                                            <blockquote>
                                                                                    <p>{{description}}</p>
                                                                            </blockquote> 
                                                                        <img src="{{urlImage}}"
                                                                            alt="">
                                                                        <div class="timeline-options">
                                                                            
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </script>
                                                            </div>
                                                        </li>
                                                        <li class="timeline-item">
                                                            <div class="panel panel-white" id="div-post-content">
                                                                <div class="panel-heading clearfix">
                                                                    <h4 class="panel-title ">Cooking Steps</h4>
                                                                </div>
                                                                <div class="panel-body" id="div-step-content">
                                                                    <script id="load-step-content" type="text/x-handlebars-template">
                                                                     {{#each .}} 
                                                                     <div class="timeline-item-post">
                                                                            <button type="button" class="btn btn-danger btn-rounded">Step {{numberOfStep}}</button>
                                                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                                              <i class="fa fa-thermometer-quarter m-r-xs"></i>Temp: {{temp}}
                                                                              &nbsp;
                                                                                <i class="fa fa-clock-o m-r-xs" ></i> Time Duration: {{time_duration}}
                                                                          
                                                                            <hr>   
                                                                            <blockquote>
                                                                                    <p>{{description}}</p>
                                                                            </blockquote> 
                                                                           
                                                                            <img src="{{imgURL}}"
                                                                                alt="">
                                                                            <div class="timeline-options">
                                                                            </div>
                                                                        </div>
                                                                       {{/each}}
                                                                        </script>
                                                                </div>
                                                            </div>
                                                        </li>

                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="panel panel-white">
                                                    <div class="panel-heading clearfix">
                                                        <h4 class="panel-title">Info</h4>
                                                    </div>
                                                    <div class="panel-body" id="div-rate-time-view">
                                                        <script id="load-post-rate-time-view" type="text/x-handlebars-template">
                                                        <p><i class="fa fa-star-half-o m-r-xs"></i>{{numberOfRate}}</p>
                                                        <p><i class="fa fa-clock-o m-r-xs"></i>{{time}}</p>
                                                        <p><i class="fa fa-street-view m-r-xs"></i>{{countView}}</p>
                                                        <p><i class="fa fa-thumbs-up m-r-xs"></i>{{like}}</p>
                                                        <p><i class="fa fa-comment m-r-xs"></i>{{comment}}</p>
                                                        </script>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                    <div role="tabpanel" class="tab-pane fade" id="tab22">
                                        <div class="panel panel-white">
                                            <div class="panel-heading clearfix">
                                                <h4 class="panel-title">Info</h4>
                                            </div>
                                            <div class="panel-body">
                                                <div class="table-responsive">
                                                    <table id="reporttable" class="display table" style="width: 100%; cellspacing: 0;">
                                                        <thead>
                                                            <tr>
                                                                <!-- <th>User ID</th> -->
                                                                <th>User Name</th>
                                                                <th>Status</th>
                                                                <th>Content</th>
                                                                <th>Time</th>
                                                                <th>Approval</th>
                                                                <th>Reject</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="listreport">
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!-- Row -->
                    </div>
                    <!-- Main Wrapper -->
                    <div class="page-footer">

                    </div>
                </div>
                <!-- /Page Inner -->
            </div>
            <!-- /Page Content -->
        </div>
        <!-- /Page Container -->
        <!-- Javascripts -->

        <script src="plugins/bootstrap/js/bootstrap.min.js"></script>
        <script src="plugins/jquery-slimscroll/jquery.slimscroll.min.js"></script>
        <script src="plugins/uniform/js/jquery.uniform.standalone.js"></script>
        <script src="plugins/switchery/switchery.min.js"></script>
        <script src="plugins/datatables/js/jquery.datatables.min.js"></script>
        <script src="js/space.min.js"></script>
        <script src="js/pages/table-data.js"></script>
</body>

</html>